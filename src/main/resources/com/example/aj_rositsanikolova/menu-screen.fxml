<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="360.0" prefWidth="338.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.aj_rositsanikolova.ApplicationController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="informationText" text="File reader system" />
   <Button fx:id="csvBtn" mnemonicParsing="false" onAction="#onCsvBtnClick" prefHeight="28.0" prefWidth="74.0" text="Read CSV" />
   <Button fx:id="jsonBtn" mnemonicParsing="false" onAction="#onJsonBtnClick" text="Read JSON" />
   <Button onAction="#onXmlBtnClick" prefHeight="27.0" prefWidth="75.0" text="Read XML" fx:id="xmlBtn" />
   <Button fx:id="addFile" onAction="#onFileChosen" prefHeight="27.0" prefWidth="78.0" text="Add file" />
</VBox>
